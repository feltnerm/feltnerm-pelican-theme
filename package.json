{
  "name": "feltnerm-pelican-theme",
  "version": "2.2.1",
  "description": "Mark Feltner's theme for his Pelican-powered blog",
  "main": "index.js",
  "browserslist": [
    "last 2 versions",
    "not ie <= 11",
    "not op_mini all",
    "not dead",
    "not < 0.5%"
  ],
  "devDependencies": {
    "browserify": "^17.0.0",
    "browserify-shim": "^3.8.0",
    "cssnano": "^5.0.8",
    "minifyify": "^7.3.5",
    "node-lessify": "^0.2.0",
    "nodemon": "^2.0.12",
    "postcss-cli": "^9.0.1",
    "postcss-preset-env": "^6.7.0",
    "postcss-reporter": "^7.0.4",
    "prettier-standard": "^16.4.1"
  },
  "scripts": {
    "watch": "nodemon --exec 'npm run build' --watch ./src/**/*",
    "build-css": "postcss --map --dir static/css src/**/*.css",
    "build-js": "browserify index.js --debug --standalone feltnerm -p [minifyify --map ./bundle.map.json --output static/bundle.map.json] > ./static/bundle.js",
    "build-assets": "cp -r ./src/fonts ./src/images ./static/",
    "build": "npm run build-css && npm run build-js && npm run build-assets",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/feltnerm/blog.git"
  },
  "author": "Mark Feltner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/feltnerm/blog/issues"
  },
  "homepage": "https://github.com/feltnerm/blog",
  "browserify": {
    "transform": [
      "node-lessify"
    ]
  },
  "browserify-shim": {
    "microformats": "microformat"
  }
}
